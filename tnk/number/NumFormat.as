package classes.tnk.number{	/**	 * ...	 * @author HiroyukiTanaka	 */	import flash.display.MovieClip;	import flash.text.*;	 	public class NumFormat	{		//入力規制		public function restrictForm(target:MovieClip, targetArray:Array) {						for (var i:Number=0; i < targetArray.length; i++ ) 			{				target[targetArray[i]].restrict = "0-9"; 				//Params.textFieldArray[i].restrict = "0-9"; 							if (targetArray[i].substr(-4,4) == "RATE") {							target[targetArray[i]].restrict = "0-99.999"; 					//Params.textFieldArray[i].restrict = "0-99.999"; 				}			}		}				//文字列の置換		public function str_replace( _str:String , _search_str:String, _replace_str:String):String		{			var strArray = _str.split(_search_str);			return strArray.join( _replace_str );		}						//文字のカウント		public function str_count( ori_str:String , search_str:String):uint		{			var strArray:Array = ori_str.split(search_str);			//trace( "strArray.length : " + strArray.length );						return strArray.length;		}				//カンマを付ける		static public function set_Comma( ori_str:String ):String		{						//3桁ごとにカンマを付加する正規表現			var pattern:RegExp = /(\d)(?=(\d{3})+(?!\d))/g;			var str:String = ori_str.replace(pattern, "$1,");						//trace("カンマつき"+str);						return str;		}				//月を2桁に		public function set_Month(ori_str:String)		{			var str:String = ori_str;						if (str.length == 1){								str = "0" + str;							}						return str;		}				//月		public function monthFormat(ori_str:String):String {					var str:String = ori_str;						if (ori_str.substr(0, 1) == "0") {				str = ori_str.substr( -1, 1);			}									return str;		}						//年を2桁に		public function set_Year(ori_str:String)		{						var str:String = ori_str;						if (str.length == 1){			 				str = "000" + str;			}			if (str.length == 2){			 				str = "00" + str;			}			if (str.length == 3){			 				str = "0" + str;			}						return str;		}						//YMのフォーマットに直す		public function YM_Format( year:String , month:String ):String {						var ym:String = set_Year(year) + set_Month(month); 						return ym;					}				//文字列の置換		public function str_Replace( str:String , search_str:String , replace_str:String )		{			var strArray = str.split(search_str);						return strArray.join( replace_str );		}						//金額入力時"1000(bairitsu)"プラス		static public var ori_ObjTarget:Object;		public function setInit_1000( ori_Obj:Object , ori_Num:Number , bairitsu:uint)		{			var str:Number = ori_Num;//ソーステキスト			var _obj:Object = ori_Obj;//対象object			if(ori_ObjTarget != _obj &&_obj.text != ""){				//初				if(str < bairitsu ){					str = ori_Num * bairitsu;//倍率				}				ori_ObjTarget = _obj;							}else{				if(ori_Num < bairitsu-1){					ori_ObjTarget = "";				}			}			//下3桁を丸め込む			str = Math.floor(str/bairitsu) * bairitsu;						//結果			if(str != 0){				_obj.text = str;			}else{				_obj.text = "";			}		}		public function reset_1000()		{			//trace("TTTTTTT");			ori_ObjTarget = "";		}							}}